<div class="col-md-4" align="left">
    <legend>
        <h4 align="left">Vehicle Usage for Day: {{schedule.type_into_day}}</h4>
    </legend>
    <table>
        <div id="mainbox">
            <div class="border">
                <br/>
                Vehicle Id: {{schedule.driver_id}}
                <br/>
                <br/>
                <p class="bottomBorder"></p>
            </div>
        </div>
        <div align="right">
            <button {{action 'goBack'}} class="btn btn-warning btn-sm navbar-secondary-btn"
                                        type="submit">
                Back
            </button>
        </div>
    </table>
</div>
<div class="col-md-4" align="center">
    <legend>
        <h4 align="center">Driver Usage for Day: {{schedule.type_into_day}}</h4>
    </legend>
    <table>
        <div id="mainbox">
            <div class="border">
                <br/>
                Driver Id: {{schedule.vehicle_id}}
                <br/>
                <br/>
                <p class="bottomBorder"></p>
            </div>
        </div>
        <div align="right">
            <button {{action 'goBack'}} class="btn btn-warning btn-sm navbar-secondary-btn"
                                        type="submit">
                Back
            </button>
        </div>
    </table>
</div>
{{outlet}}